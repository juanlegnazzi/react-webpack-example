{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@ccomponents": ["src/components/common/index"],
      "@components": ["src/components/layout/index"],
      "@screens": ["src/screens/index"],
      "@constants/*": ["src/constants/*"],
      "@styles/*": ["src/styles/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
}
